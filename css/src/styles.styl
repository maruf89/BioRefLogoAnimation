/*  Once javascript has initiated  */
.start

    .spinningCoin
    .dna
        animation startSpin 1s cubic-bezier(.14, .32, .68, .98) 1s

    [data-spin="true"]
        transform rotateY(360deg)
        animation fullSpin 3s cubic-bezier(.10, .43, .60, .44) 0s 1

    .bLetter
        opacity 1
        animation appear 1s cubic-bezier(.40, .20, .83, .20)

    .rLetter
        opacity 1
        animation delayedAppear 5s cubic-bezier(.40, .20, .83, .20)

    .type
        opacity 1
        animation typeAppear linear 6s

.start[data-fade="true"]
    .piece
        opacity 0

    .background
        opacity 1







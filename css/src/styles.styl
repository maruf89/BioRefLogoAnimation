$baseFont = 14px
$animationSize = 25px

em(px, base = $baseFont)
    unit((px/base), 'em');

body
    font-size $baseFont

.animation
    position absolute
    left 50%
    margin-left - em( (230.477/2) )
    top 50%
    margin-top - em( (284.934/2) )
    width em(230.477)
    height em(284.934)
    font-size $animationSize

.container
    width 100%
    height 100%
    position relative

.piece
    position absolute
    left 0
    top 0

    transition opacity 1.5s linear

    &,
    object
        width em(230.477)
        height em(284.934)

@keyframes startSpin
    0%
        transform rotateY(180deg)
    100%
        transform rotateY(360deg)

@keyframes fullSpin
    0%
        transform rotateY(0deg)
    // 50%
    //     transform rotateY()
    50%
        transform rotateY(360deg)
    100%
        transform rotateY(0deg)

@keyframes appear
    0%
        opacity 0
        font-size 40px
        left -2em
        top -3.5em
    100%
        opacity 1
        font-size $animationSize
        left 0
        top 0

@keyframes delayedAppear
    0%
        opacity 0
        font-size 40px
        left -2em
        top -3.5em
    80%
        opacity 0
        font-size 40px
        left -2em
        top -3.5em
    100%
        opacity 1
        font-size $animationSize
        left 0
        top 0

@keyframes typeAppear
    0%
        opacity 0
    80%
        opacity 0
    100%
        opacity 1

.spinningCoin
.dna
    transform rotateY(180deg)

.square
    display none

.bLetter
.rLetter
.background
    opacity 0

.background
    z-index -1
    transition opacity 2s ease-in .5s

// [data-appear="true"]
